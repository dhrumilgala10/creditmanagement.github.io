  <div class="bg-text">
    <div id="1"></div>>
    <h1 align="center" id="1"><i class="user icon"></i> USER DETAILS</h1>
    <div class="ui centered card">
      <div class="content">
        <div class="header">{{results.name}} <i class="user icon"></i></div>
      </div>
      <div class="content">
       
        <div class="ui small feed" style="color: black;">
         

          Email ID : {{results.Email_id}}
          <br>
          <br>
           Father's Name : {{results.FatherName}}
